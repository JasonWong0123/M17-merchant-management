# M17 Merchant Management API Environment Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
# Use * for development, specific domains for production
ALLOWED_ORIGINS=*

# Security Configuration (for production)
# JWT_SECRET=your-super-secret-jwt-key-here
# API_KEY=your-api-key-for-external-services

# Database Configuration (if using external database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=m17_merchant
# DB_USER=merchant_user
# DB_PASSWORD=secure_password

# Redis Configuration (if using caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# External Services (if integrating)
# PAYMENT_GATEWAY_URL=https://api.payment-provider.com
# PAYMENT_GATEWAY_KEY=your-payment-gateway-key
# EMAIL_SERVICE_URL=https://api.email-service.com
# EMAIL_SERVICE_KEY=your-email-service-key

# File Storage (if using cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=m17-merchant-images

# Monitoring and Analytics
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Development Tools
# DEBUG=m17:*
# ENABLE_SWAGGER=true
# ENABLE_PLAYGROUND=true

# Production Settings
# TRUST_PROXY=true
# HELMET_ENABLED=true
# COMPRESSION_ENABLED=true

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=24h
# BACKUP_RETENTION_DAYS=30

# Notification Settings
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook/url

# Feature Flags
# ENABLE_ANALYTICS=true
# ENABLE_PROMOTIONS=true
# ENABLE_REVIEWS=true
# ENABLE_INVENTORY_ALERTS=true
